<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="682.0" prefWidth="297.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.controller.BillController">

    <!-- THIS VBOX IS THE ACTUAL BILL PAPER TO PRINT -->
    <VBox fx:id="billContainer" alignment="TOP_CENTER" prefHeight="620.0" prefWidth="297.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 5;">
        <effect>
            <DropShadow color="#00000022" radius="10.0" spread="0.1" />
        </effect>

        <!-- Shop Header -->
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #16a34a;" text="Thogakade" />
        <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="No. 123, Galle Road, Panadura" />
        <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Tel: 011-2345678" />

        <Separator prefWidth="200.0" style="-fx-padding: 10 0;" />

        <!-- Order Info -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Order ID:" />
            <Label fx:id="lblOrderId" style="-fx-font-size: 12px; -fx-text-fill: #1f2937;" text="O001" />
            <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Date:" />
            <Label fx:id="lblDate" style="-fx-font-size: 12px; -fx-text-fill: #1f2937;" text="2025-10-10" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Customer:" />
            <Label fx:id="lblCustomerName" style="-fx-font-size: 12px; -fx-text-fill: #1f2937;" text="Kamal Perera" />
        </HBox>

        <Separator prefWidth="200.0" />

        <!-- Bill Items Table -->
        <TableView fx:id="tblBill" prefHeight="300.0" prefWidth="340.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colItemName" prefWidth="140.0" text="Item" />
                <TableColumn fx:id="colQty" prefWidth="50.0" style="-fx-alignment: CENTER;" text="Qty" />
                <TableColumn fx:id="colPrice" prefWidth="70.0" style="-fx-alignment: CENTER-RIGHT;" text="Price" />
                <TableColumn fx:id="colAmount" prefWidth="75.0" style="-fx-alignment: CENTER-RIGHT;" text="Total" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Separator prefWidth="200.0" />

        <!-- Totals Section -->
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Net Total:" />
            <Label fx:id="lblNetTotal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #16a34a;" text="1,250.00" />
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="20" />

        <HBox alignment="CENTER_RIGHT" spacing="20" />

        <VBox alignment="CENTER" spacing="2" style="-fx-padding: 15 0 0 0;">
            <Label style="-fx-font-size: 11px; -fx-text-fill: #1f2937; -fx-font-weight: bold;" text="THANK YOU COME AGAIN!" />
            <Label style="-fx-font-size: 10px; -fx-text-fill: #6b7280;" text="Software by Rishindu Yohan" />
        </VBox>

    </VBox>

    <!-- BUTTONS (These will NOT print) -->
    <Button layoutX="23.0" layoutY="632.0" onAction="#btnPrintOnAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #16a34a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="ðŸ–¨ Print" />
    <Button layoutX="174.0" layoutY="632.0" onAction="#btnCloseOnAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Close" />

</AnchorPane>
