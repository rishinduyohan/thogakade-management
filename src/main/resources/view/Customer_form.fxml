    <Label layoutX="30.0" layoutY="60.0" style="-fx-font-size: 13px; -fx-text-fill: #6b7280;" text="Manage customer records, add new profiles, and update existing details." />

    <VBox layoutX="30.0" layoutY="100.0" prefHeight="250.0" prefWidth="930.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12;">
        <effect>
            <DropShadow color="#00000011" radius="8.0" spread="0.1" />
        </effect>

        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Customer Details Form" />
        <Separator prefWidth="200.0" />

        <HBox spacing="20.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Customer ID" />
                <TextField fx:id="txtId" editable="false" promptText="C001" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Name" />
                <TextField fx:id="txtName" promptText="Enter full name" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
        </HBox>

        <HBox spacing="20.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Address" />
                <TextField fx:id="txtAddress" promptText="Enter address" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Contact" />
                <TextField fx:id="txtContact" promptText="Enter phone number" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
            <Button onAction="#btnSaveOnAction" prefHeight="35.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="âž• ADD Customer" />
            <Button onAction="#btnUpdateOnAction" prefHeight="35.0" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="ðŸ”„ UPDATE Details" />
            <Button onAction="#btnDeleteOnAction" prefHeight="35.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="âŒ DELETE Customer" />
            <Button onAction="#btnNewOnAction" prefHeight="35.0" style="-fx-background-color: #f3f4f6; -fx-text-fill: #4b5563; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="ðŸ§¹ CLEAR Form" />
        </HBox>
    </VBox>

    <VBox layoutX="30.0" layoutY="375.0" prefHeight="303.0" prefWidth="930.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12;">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Existing Customers" />
        <TableView fx:id="tblCustomers" prefHeight="203.0" prefWidth="889.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="320.0" text="Address" />
                <TableColumn fx:id="colContact" prefWidth="240.0" text="Contact" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</AnchorPane>
