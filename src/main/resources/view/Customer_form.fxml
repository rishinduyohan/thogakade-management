<AnchorPane fx:id="customerPane" prefHeight="702.0" prefWidth="1061.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.controller.mainController.CustomerController">

