<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="itemPane" prefHeight="702.0" prefWidth="1015.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.controller.ItemController">

    <!-- Page Header -->
    <Label layoutX="30.0" layoutY="24.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Item Management" />
    <Label layoutX="30.0" layoutY="60.0" style="-fx-font-size: 13px; -fx-text-fill: #6b7280;" text="Manage inventory items, update stock levels, and pricing details." />

    <!-- Action Buttons (Top Right) -->
    <Button layoutX="472.0" layoutY="30.0" onAction="#btnAddOnAction" prefHeight="35.0" prefWidth="119.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="âž• ADD Item" />
    <Button layoutX="601.0" layoutY="30.0" onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="119.0" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="ðŸ”„ UPDATE Item" />
    <Button layoutX="733.0" layoutY="30.0" onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="119.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="âŒ DELETE Item" />
    <Button layoutX="866.0" layoutY="30.0" onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="98.0" style="-fx-background-color: #f3f4f6; -fx-text-fill: #4b5563; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="CLEAR Form" />

    <!-- Item Details Form Container -->
    <VBox layoutX="30.0" layoutY="100.0" prefHeight="250.0" prefWidth="930.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12;">
        <effect>
            <DropShadow color="#00000011" radius="8.0" spread="0.1" />
        </effect>

        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Item Details Form" />
        <Separator prefWidth="200.0" />

        <!-- Row 1: Item Code & Description -->
        <HBox spacing="20.0">
            <!-- Item Code -->
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Item Code" />
                <TextField fx:id="txtItemCode" prefHeight="27.0" prefWidth="200.0" promptText="P001" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>

            <!-- Description -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Description" />
                <TextField fx:id="txtDescription" prefHeight="27.0" promptText="Enter item description" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
        </HBox>

        <!-- Row 2: Pack Size, Unit Price, Qty -->
        <HBox spacing="20.0">
            <!-- Pack Size -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Pack Size" />
                <TextField fx:id="txtPackSize" promptText="e.g. 5kg, Small, Box" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>

            <!-- Unit Price -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Unit Price" />
                <TextField fx:id="txtUnitPrice" promptText="0.00" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>

            <!-- Quantity on Hand -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" text="Qty On Hand" />
                <TextField fx:id="txtQty" promptText="0" style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8;" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Item Table Container -->
    <VBox layoutX="30.0" layoutY="370.0" prefHeight="308.0" prefWidth="930.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12;">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="Inventory Items" />
        <TableView fx:id="tblItems" prefHeight="246.0" prefWidth="889.0">
            <columns>
                <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                <TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
                <TableColumn fx:id="colPackSize" prefWidth="120.0" text="Pack Size" />
                <TableColumn fx:id="colUnitPrice" prefWidth="120.0" text="Unit Price" />
                <TableColumn fx:id="colQty" prefWidth="100.0" text="Qty On Hand" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</AnchorPane>
